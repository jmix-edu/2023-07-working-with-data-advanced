<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://customerSearchScreen.caption">
    <data>
        <collection id="customersDc"
                    class="com.company.jmixpm.entity.Customer">
            <fetchPlan extends="_base"/>
            <loader id="customersDl">
                <query>
                    <![CDATA[select e from Customer e]]>
                    <!--<condition>
                        <and>
                            <c:jpql>
                                <c:where>e.firstName like :component_nameField</c:where>
                            </c:jpql>
                        </and>
                    </condition>-->
                </query>
            </loader>
        </collection>
        <collection id="ordersDc"
                    class="com.company.jmixpm.entity.Order">
            <fetchPlan extends="_base"/>
            <loader id="ordersDl">
                <query>
                    <![CDATA[select e from Order_ e
                        where e.customer = :container_customersDc]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true">
            <refresh loader="customersDl">
                <onScreenEvent type="Init"/>
            </refresh>
        </dataLoadCoordinator>
    </facets>
    <layout expand="ordersTable">
        <entityComboBox id="customerField"
                        caption="Customer"
                        optionsContainer="customersDc"/>
        <table id="ordersTable"
               dataContainer="ordersDc"
               width="100%">
            <columns>
                <column id="orderNumber"/>
                <column id="date"/>
            </columns>
        </table>
    </layout>
</window>